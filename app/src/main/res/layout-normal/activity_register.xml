<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".RegisterActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="171dp"
        android:layout_height="28dp"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:src="@drawable/alphametricatext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:text="@string/textTitleRegister"
        android:textColor="@color/textRegisterColor"
        android:textSize="@dimen/textTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

    </TextView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:id="@+id/linearContainer"
        android:orientation="vertical"
        android:paddingStart="22dp"
        android:paddingRight="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:paddingLeft="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameTitle"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/titleColorHint"
            android:textSize="@dimen/textNormal"
            android:id="@+id/nameRegister"
            android:paddingBottom="20dp"
            android:hint="@string/nameHint">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phoneTitle"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/titleColorHint"
            android:textSize="@dimen/textNormal"
            android:textColor="@color/black"
            android:id="@+id/phoneRegister"
            android:inputType="phone"
            android:paddingBottom="20dp"
            android:hint="@string/phoneHint">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dateTitle"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/titleColorHint"
            android:textSize="@dimen/textNormal"
            android:textColor="@color/black"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:id="@+id/dateRegister"
            android:paddingBottom="20dp"
            android:hint="@string/dateHint">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailTitle"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/titleColorHint"
            android:textSize="@dimen/textNormal"
            android:textColor="@color/black"
            android:id="@+id/emailRegister"
            android:inputType="textEmailAddress"
            android:paddingBottom="20dp"
            android:hint="@string/emailHint">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passTitle"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/titleColorHint"
            android:textSize="@dimen/textNormal"
            android:textColor="@color/black"
            android:id="@+id/passRegister"
            android:inputType="textPassword"
            android:paddingBottom="20dp"
            android:hint="@string/passHint">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cpassTitle"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/titleColorHint"
            android:textColor="@color/black"
            android:textSize="@dimen/textNormal"
            android:id="@+id/cpassRegister"
            android:inputType="textPassword"
            android:paddingBottom="20dp"
            android:hint="@string/passHint">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearContainer"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            tools:ignore="RtlSymmetry">

            <CheckBox
                android:id="@+id/checkOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:button="@drawable/checkbox_selector"
                android:text="@string/checkTextOne"
                android:textColor="@color/titleColorHint">

            </CheckBox>

            <CheckBox
                android:id="@+id/checkTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:paddingLeft="10dp"
                android:button="@drawable/checkbox_selector"
                android:text="@string/checkTextTwo"
                android:textColor="@color/titleColorHint">

            </CheckBox>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            tools:ignore="RtlSymmetry">

            <CheckBox
                android:id="@+id/checkTree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkTextTree"
                android:paddingLeft="10dp"
                android:button="@drawable/checkbox_selector"
                android:textColor="@color/titleColorHint">

            </CheckBox>

            <CheckBox
                android:id="@+id/checkFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:paddingLeft="10dp"
                android:button="@drawable/checkbox_selector"
                android:text="@string/checkTextFour"
                android:textColor="@color/titleColorHint">

            </CheckBox>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:paddingStart="50dp"
            android:paddingRight="50dp"
            android:gravity="center_horizontal"

            android:paddingLeft="20dp">

            <CheckBox
                android:id="@+id/checkAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkAgree"
                android:buttonTint="@color/checkBox"
                android:textColor="@color/titleColorHint">

            </CheckBox>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:id="@+id/button_register"
                android:background="@color/buttonColor"
                android:textSize="@dimen/textNormal"
                android:text="@string/buttonRegister">

            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/link_register"
                android:textSize="@dimen/textNormal"
                android:textColor="@color/titleColorHint"
                android:text="@string/linkRegister">

            </TextView>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>