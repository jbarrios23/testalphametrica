<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="171dp"
        android:layout_height="28dp"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:src="@drawable/alphametricatext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:text="@string/textTitleRegister"
        android:textColor="@color/textRegisterColor"
        android:textSize="@dimen/textTitleLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

    </TextView>

    <LinearLayout
        android:id="@+id/linearContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailTitle"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">

        </TextView>

        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/emailHint"
            android:textColor="@color/black"
            android:paddingBottom="20dp"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:drawableStart="@android:drawable/sym_action_email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/titleColorHint"
            android:textSize="@dimen/textLarge">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passTitle"
            android:layout_marginTop="10dp"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/textLarge">

        </TextView>

        <EditText
            android:id="@+id/pass_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/passHint"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:paddingBottom="20dp"
            android:textColorHint="@color/titleColorHint"
            android:textSize="@dimen/textLarge"
            tools:ignore="TextFields">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:id="@+id/link_forgot"
            android:textSize="@dimen/textLarge"
            android:text="@string/loginF">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="121dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        android:paddingStart="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearContainer">


        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/buttonColor"
            android:text="@string/loginButton"
            android:textColor="@color/white"
            android:textSize="@dimen/textLarge">

        </Button>

        <TextView
            android:id="@+id/link_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/loginLink"
            android:textColor="@color/titleColorHint"
            android:textSize="@dimen/textLarge">

        </TextView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>